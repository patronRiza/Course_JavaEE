<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="ru.prj"/>
    <mvc:annotation-driven />

<!--    Настройки базы данных-->
    <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
        <property name="URL" value="jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1"/>
        <property name="user" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <bean id="liquibase" class="liquibase.integration.spring.SpringLiquibase">
        <property name="dataSource" ref="dataSource"/>
        <property name="changeLog" value="classpath:db/changelog/db.changelog-master.xml"/>
    </bean>

    <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="objectMapper">
            <bean class="com.fasterxml.jackson.databind.ObjectMapper"/>
        </property>
    </bean>

<!--    Настройки jdbcTemplate-->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

<!--    Репозитории-->
    <bean id="studentRepository" class="ru.prj.repositories.implementations.StudentRepositoryImpl">
        <constructor-arg index="0" ref="jdbcTemplate"/>
    </bean>

    <bean id="courseRepository" class="ru.prj.repositories.implementations.CourseRepository"/>

<!--    Сервисы-->
    <bean id="studentService" class="ru.prj.services.StudentService">
        <constructor-arg index="0" ref="studentRepository"/>
        <constructor-arg index="1" ref="courseRepository"/>
    </bean>
    <bean id="userSession" class="ru.prj.services.UserSessionService"/>

<!--    Контроллеры-->
    <bean id="studentController" class="ru.prj.controllers.StudentController">
        <constructor-arg index="0" ref="studentService"/>
        <constructor-arg index="1" ref="userSession"/>
    </bean>
</beans>